<UserControl x:Class="ClubTennis.Views.CreationMemberUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClubTennis.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                   Text="Prenom"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontSize="14"/>

            <TextBox Grid.Column="1"
                 x:Name="PrenomTextBox"
                 Margin="10"
                 VerticalContentAlignment="Center"
                 HorizontalContentAlignment="Center"/>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0"
                   Text="Nom"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontSize="14"/>

            <TextBox Grid.Column="1"
                 x:Name="NomTextBox"
                 Margin="10"
                 VerticalContentAlignment="Center"
                 HorizontalContentAlignment="Center"/>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0"
                   Text="Adresse"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontSize="14"/>

            <TextBox Grid.Column="1"
                 x:Name="AdressTextBox"
                 Margin="10"
                 VerticalContentAlignment="Center"
                 HorizontalContentAlignment="Center"/>
        </Grid>

        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0"
                   Text="Numéro de téléphone"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontSize="14"/>

            <TextBox Grid.Column="1"
                 x:Name="PhoneTextBox"
                 Margin="10"
                 VerticalContentAlignment="Center"
                 HorizontalContentAlignment="Center"/>
        </Grid>

        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0"
                   Text="Classement"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontSize="14"/>

            <ComboBox Grid.Column="1"
                      HorizontalContentAlignment="Center"
                      VerticalContentAlignment="Center"
                      Margin="10"
                      x:Name="ClassementComboBox">
                <ComboBoxItem IsSelected="True">
                    Non classé
                </ComboBoxItem>
            </ComboBox>

        </Grid>

        <Grid Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0"
                   Text="Genre"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontSize="14"/>

            <ComboBox Grid.Column="1"
                  Margin="10"
                  VerticalContentAlignment="Center"
                  HorizontalContentAlignment="Center"
                      x:Name="GenreComboBox">
                <ComboBoxItem IsSelected="True">
                    Homme
                </ComboBoxItem>
                <ComboBoxItem>
                    Femme
                </ComboBoxItem>
                <ComboBoxItem>
                    Autre
                </ComboBoxItem>
            </ComboBox>
        </Grid>
        
        <Grid Grid.Row="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0"
                   Text="Payment fait"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontSize="14"/>

            <CheckBox x:Name="PaymentCheckBox"
                      Grid.Column="1"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center"/>
        </Grid>
        
        
        

        

        
        

        
    </Grid>
</UserControl>
